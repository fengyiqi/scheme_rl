<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <domain>
        <nodeSize> 0.083333333333333333333333333333333  </nodeSize>

        <nodeRatio>
            <x> 3 </x>
            <y> 12 </y>
            <z> 1 </z>
        </nodeRatio>

        <boundaryConditions>
            <material>
                <west>Symmetry</west>
                <east>Symmetry</east>
                <south>FixedValue</south>
                <valuesSouth>
                    <density>2.0</density>
                    <velocityX>0.0</velocityX>
                    <velocityY>0.0</velocityY>
                    <velocityZ>0.0</velocityZ>
                    <pressure>1.0</pressure>
                    <temperature>1.0</temperature>
                </valuesSouth>

                <north>FixedValue</north>
                <valuesNorth>
                    <density>1.0</density>
                    <velocityX>0.0</velocityX>
                    <velocityY>0.0</velocityY>
                    <velocityZ>0.0</velocityZ>
                    <pressure>2.5</pressure>
                    <temperature>1.0</temperature>
                </valuesNorth>
                <bottom>Symmetry</bottom>
                <top>Symmetry</top>
            </material>

            <levelSet>
		<west>   symmetry </west>
		<east>   symmetry </east>
		<south>  symmetry </south>
		<north>  symmetry </north>
		<bottom> symmetry </bottom>
		<top>    symmetry </top>
            </levelSet>
        </boundaryConditions>

        <initialConditions>
            <material1>
            if (y &lt; 0.50)
            {
                if (x &lt; 0.1250)
                {
                    density : = 2.0;
                    velocityX := 0.0;
                    velocityY := -0.025*sqrt(5.0/3.0*(0.5+y))*cos(8.0*pi*x);
                    velocityZ := 0.0;
                    pressure := 1.0+2.0*y;
                }
                else
                {
                    density : = 2.0;
                    velocityX := 0.0;
                    velocityY := -0.025*sqrt(5.0/3.0*(0.5+y))*cos(8.0*pi*(0.25-x));
                    velocityZ := 0.0;
                    pressure := 1.0+2.0*y;
                }
            }
            else
            {
                if (x &lt; 0.1250)
                {
                    density := 1.0;
                    velocityX := 0.0;
                    velocityY := -0.025*sqrt(5.0/3.0*(1.5+y))*cos(8.0*pi*x);
                    velocityZ := 0.0;
                    pressure := 1.5+y;
                }
                else
                {
                    density := 1.0;
                    velocityX := 0.0;
                    velocityY := -0.025*sqrt(5.0/3.0*(1.5+y))*cos(8.0*pi*(0.25-x));
                    velocityZ := 0.0;
                    pressure := 1.5+y;
                }
            }
            </material1>

            <material2>
                density := 0.0;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 0.0;
            </material2>

            <levelSet1>
                phi := 1.0;
            </levelSet1>
        </initialConditions>
    </domain>

    <materials>
        <numberOfMaterials>              1   </numberOfMaterials>
        <material1>
            <equationOfState>
                <type>StiffenedGas</type>
                <gamma>                     1.6666666666666666666667   </gamma>
                <A>                         0.0   </A>
                <B>                         0.0   </B>
                <C>                         0.0   </C>
                <rho0>                      1.2   </rho0>
                <specificGasConstant>       1.0   </specificGasConstant>
                <backgroundPressure> 	     0.0   </backgroundPressure>
            </equationOfState>
            <properties>
                <specificHeatCapacity> 0.0 </specificHeatCapacity>
                <thermalConductivity> 0.0 </thermalConductivity>
                <shearViscosity> 0.0 </shearViscosity>
                <bulkViscosity> 0.0 </bulkViscosity>
            </properties>
        </material1>   
    </materials>

   <sourceTerms>
      <gravity>
         <x> 0 </x>
         <y> 1 </y>
         <z> 0 </z>
      </gravity>
   </sourceTerms>

    <multiResolution>
        <maximumLevel> 0 </maximumLevel>

        <refinementCriterion>
            <epsilonReference>    0.001 </epsilonReference>
            <levelOfEpsilonReference> 2  </levelOfEpsilonReference>
        </refinementCriterion>
    </multiResolution>

   <timeControl>
       <startTime> 0.0 </startTime>
       <endTime>   1.95 </endTime>
       <CFLNumber> 0.6 </CFLNumber>
   </timeControl>

   <dimensionalization>
       <lengthReference>         1  </lengthReference>
       <velocityReference>       1  </velocityReference>
       <densityReference>        1  </densityReference>
       <temperatureReference>    1  </temperatureReference>
   </dimensionalization>

   <restart>
      <restore>
         <mode> Off </mode> <!-- Off, Soft OR Forced -->
         <fileName> RayleighTaylorInstability/restart/restart_***.h5 </fileName>
      </restore>
      <snapshots>
         <type> Off </type> <!-- Off, Stamps, Interval OR Stamps Interval -->
         <interval> 3600 </interval> <!-- in wall seconds -->
         <intervalsToKeep> 2 </intervalsToKeep> 
         <stamps>
             <ts1>2.500</ts1>
         </stamps>
      </snapshots>
   </restart>

   <output>
      <timeNamingFactor> 1.e0 </timeNamingFactor>
      <standardOutput> <!-- for general or debug output -->
         <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
         <interval>  0.02 </interval>
	      <stamps>
            <ts1> 0.0004 </ts1>
         </stamps>
      </standardOutput>
      <interfaceOutput> 
         <type> Off </type> <!--Off, Interval, Stamps OR IntervalStamps-->
         <interval>  1e3 </interval>
	      <stamps>
            <ts1>  0.0004 </ts1>
         </stamps>
      </interfaceOutput>
   </output>
</configuration>
