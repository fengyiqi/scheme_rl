<configuration>
    <domain>
        
        <nodeSize> 0.5  </nodeSize>

        
        <nodeRatio>
            <x> 2 </x>
            <y> 2 </y>
            <z> 1 </z>
        </nodeRatio>

        <boundaryConditions>
            <material>
                
                <west>periodic</west>
                <east>periodic</east>
                <south>periodic</south>
                <north>periodic</north>
                <bottom>periodic</bottom>
                <top>periodic</top>
            </material>

            <levelSet>
                
                <west>   periodic </west>
                <east>   periodic </east>
                <south>  periodic </south>
                <north>  periodic </north>
                <bottom> periodic </bottom>
                <top>    periodic </top>
            </levelSet>
        </boundaryConditions>

        <initialConditions>
            <material1>
	        if (y &gt; 0.5)
       	 	{
                	density := 1.0;
                	velocityX := tanh((0.75-y)*80.0);
                	velocityY := 0.05*sin(2.0*pi*x);
                	velocityZ := 0.0;
                	pressure := 100.0;
        	}
        	else
        	{
                	density := 1.0;
                	velocityX := tanh((y-0.25)*80.0);
                	velocityY := 0.05*sin(2.0 * pi * x);
                	velocityZ := 0.0;
                	pressure := 100.0;
        	}
            </material1>

            <levelSet1>
                phi := 1.0;
            </levelSet1>
        </initialConditions>
    </domain>

   
   
   <materials>
      <numberOfMaterials> 1   </numberOfMaterials>
      <material1>
         <equationOfState>
            <type> StiffenedGas </type>
            <gamma>               1.4   </gamma>
            <A>                   0.0   </A>
            <B>                   0.0   </B>
            <C>                   0.0   </C>
            <rho0>                1.2   </rho0>
	    <specificGasConstant> 0.0   </specificGasConstant>
	    <backgroundPressure>  0.0   </backgroundPressure>
	      </equationOfState>
         <properties>
            <specificHeatCapacity> 0.0 </specificHeatCapacity>
            <thermalConductivity> 0.0 </thermalConductivity>
            <shearViscosity> 0.0001 </shearViscosity>
            <bulkViscosity> 0.0 </bulkViscosity>
         </properties>
      </material1>
   </materials>

    <sourceTerms>
        <gravity>
            <x> 0 </x>
            <y> 0 </y>
            <z> 0 </z>
        </gravity>
    </sourceTerms>

   <multiResolution>
       <maximumLevel> 0 </maximumLevel>

       <refinementCriterion>
           <epsilonReference>    0.01 </epsilonReference>
           
           <levelOfEpsilonReference> 0  </levelOfEpsilonReference>
       </refinementCriterion>
   </multiResolution>

   <timeControl>
      <startTime> 0.0  </startTime>
      <endTime>1.200</endTime>
      <CFLNumber> 0.6 </CFLNumber>
   </timeControl>

   <dimensionalization>
      <lengthReference>       1.0  </lengthReference>
      <velocityReference>     1.0  </velocityReference>
      <densityReference>      1.0  </densityReference>
      <temperatureReference>  1.0  </temperatureReference>
   </dimensionalization>

   <restart>
      <restore>
         <mode>Forced</mode> 
         <fileName>shear_64_1.150/restart/restart_1.150000.h5</fileName>
      </restore>
      <snapshots>
         <type>Stamps</type> 
         <interval> 3600 </interval> 
         <intervalsToKeep> 2 </intervalsToKeep> 
         <stamps>
             <ts1>1.200</ts1>
         </stamps>
      </snapshots>
   </restart>

   <output>
      <timeNamingFactor> 1.e0 </timeNamingFactor>
      <standardOutput> 
         <type> Interval </type> 
         <interval>  0.1 </interval>
	      <stamps>
            <ts1> 0.6 </ts1>
	    <ts2> 0.8 </ts2>
	    <ts3> 1.0 </ts3>
	    <ts4> 1.2 </ts4>
	    <ts5> 2.5 </ts5>
	    <ts6> 10.0 </ts6>
	    <ts7> 20.0 </ts7>

         </stamps>
      </standardOutput>
      <interfaceOutput> 
         <type> Off </type> 
         <interval>  1e3 </interval>
	      <stamps>
            <ts1>  0.0004 </ts1>
         </stamps>
      </interfaceOutput>
   </output>
</configuration>